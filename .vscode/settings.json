{
    "editor.formatOnSave": true,
    "files.associations": {
        "*.html": "jinja-html"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports.python": true
        }
    },
    "isort.args": [
        "--profile",
        "black",
        "--skip-glob",
        "migrations/*"
    ]
}